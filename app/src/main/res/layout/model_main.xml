<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/model_main"
    >
    
    <TextView
        android:id="@+id/tv_compete_return"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/tv_competemodename"

        android:layout_marginTop="32dp"
        android:background="@drawable/back"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tv_competemodename"
        android:background="@drawable/game_set"
        android:gravity="center_vertical"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/tv_compete_return"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"

        android:text="@string/mode1"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/tv_stop"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:background="@drawable/disabled"
        android:gravity="center"
        android:text="@string/stop"
        android:textColor="@color/gray"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/tv_compete_start"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/tv_tryagain"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:background="@drawable/disabled"
        android:gravity="center"
        android:text="@string/strcontinue"
        android:textColor="@color/gray"
        android:textSize="30sp"
        android:layout_below="@+id/tv_stop"
        android:layout_toEndOf="@+id/rv_show"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/tv_compete_start"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:background="@drawable/pressed"
        android:gravity="center"
        android:text="@string/start"
        android:textColor="#333333"
        android:textSize="30sp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"

        android:layout_marginRight="20dp"
        android:layout_below="@+id/tv_compete_return"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv_stop"
        android:layout_below="@+id/tv_compete_return"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/pressed"
        android:gravity="center"
        android:text="@string/end"
        android:textColor="@color/black"
        android:textSize="30sp"

        android:layout_toEndOf="@+id/rv_show"
        android:layout_alignEnd="@id/tv_tryagain"
        android:layout_below="@+id/tv_tryagain"
         />

</RelativeLayout>
